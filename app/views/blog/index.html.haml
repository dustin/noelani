- content_for :more_head do
  %link{:rel => 'alternate', :type => 'application/rss+xml', :title => "Posts RSS", :href => formatted_blog_index_path(:rss)}

- @blog_posts.each do |post|
  .blog_post
    %h2{:class => post.released? ? 'released' : 'notreleased' }
      = link_to post.title, blog_path(post)
    .content=render_post(post)
    .when
      Posted
      = post.updated_at
    %hr
